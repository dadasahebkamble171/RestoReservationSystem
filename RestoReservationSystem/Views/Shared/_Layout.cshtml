<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

            .body-container {
                background: linear-gradient(to right, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://wallpapercave.com/wp/wp2038161.jpg');
                height: 90vh;
                width: 100%;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                text-align: center;
                color: white;
            }
            .body-content{
                margin-top: 5%;
            }

            .navbar {
                position: fixed;
                top: 0;
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 15px 30px;
                background-color: black;
                z-index: 1000;
            }

            a {
                text-decoration: none;
            }

            .heroTitle {
                font-size: 100px;
            }

            .Hsubtitle {
                font-size: 40px;
            }

            /*ABOUT US STYLE*/
            /*body {
            font-family: Arial, sans-serif;
        }*/

            .section-title {
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 0.5rem;
                background-color: dimgray;
            }

            .section-title-contact {
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 0.5rem;
                background-color: deepskyblue;
            }

            .section-subtitle {
                font-size: 1.2rem;
                font-style: italic;
                margin-bottom: 1.5rem;
            }

            .about-description {
                font-size: 1rem;
                color: #555;
            }

            .image-grid img {
                border-radius: 0.5rem;
            }
            /*ABOUT STYLE END*/
    </style>


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand fs-3" href="#">Restaurant Reservation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mx-5" id="navbarSupportedContent" ">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink(
                        linkText: "Home",
                        actionName: "Index",
                        controllerName: "Home",
                        routeValues: null,
                        htmlAttributes: new { @class = "btn btn-link nav-item", style = "text-decoration: none; color: white;" })
                        @*<a class="nav-link active" aria-current="page" href="#">Home</a>*@
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#AboutUs">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#ContactUs">Contact</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(
             linkText: "Restaurants",
             actionName: "Restaurants",
             controllerName: "Home",
             routeValues: null,
             htmlAttributes: new { @class = "btn btn-link nav-item", style = "text-decoration: none; color: white;" })
                        
                    </li>
                </ul>
                <div style="display: flex; align-items: center; justify-content: space-around; width: auto">
                    @*<a href="" class="mx-5">
            <img src="../../SiteImages/user.png" height="25px" width="25px">
            <span class="text-light">&nbspHello, @Session["Userfirstname"].ToString()</span>
        </a>*@

                    @{
                        if (Session["validUserId"] != null)
                        {
                            
                                <img src="../../SiteImages/user.png" height="25px" width="25px">
                                
                            @Html.ActionLink(
                            linkText: "Hello, " + Session["Userfirstname"].ToString(),
                            actionName: "User_profile",
                            controllerName: "Home",
                            routeValues: null,
                            htmlAttributes: new { @class = "btn btn-link nav-item", style = "text-decoration: none; color: white; margin-right: 20px;" })

                            @Html.ActionLink(
                            linkText: "Log Out",
                            actionName: "Logout",
                            controllerName: "UserAccount",
                            routeValues: null,
                            htmlAttributes: new { @class = "btn btn-outline-light" })
                        }
                        else
                        {
                            <a href="" class="mx-5" onclick="alert('You are not logged in, please log in to continue..')">
                                <img src="../../SiteImages/user.png" height="25px" width="25px">
                                <span class="text-light">&nbsp Guest</span>
                            </a>


                            @Html.ActionLink(
                            linkText: "LogIn",
                            actionName: "Login",
                            controllerName: "UserAccount",
                            routeValues: null,
                            htmlAttributes: new { @class = "btn btn-outline-light" })
                        }
                    }


                </div>
            </div>
        </div>
    </nav>
    
    
    
    
